<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.fcw.tran.modules.sys.mapper.SysMenuMapper">

    <select id="queryListParentId" resultType="cn.fcw.tran.modules.sys.entity.SysMenuEntity">
        select * from sys_menu where parent_id = #{parentId} AND del_flag=0 order by order_num asc
    </select>

    <select id="queryNotButtonList" resultType="cn.fcw.tran.modules.sys.entity.SysMenuEntity">
        select * from sys_menu where del_flag=0 AND 'type'!= 2 order by order_num asc
    </select>

</mapper>